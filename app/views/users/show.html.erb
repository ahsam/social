<%= render 'shared/cover', user: @user %>
<br>
<div id="user-<%= @user.id %>" class="row">
  <div class="col-lg-3">
    <%= render 'shared/user_info' %>
  </div>
  <div class="col-lg-6">
    <div id="activities">
      <% if @activities.empty? %>
        <div class="well">
          <%= render('shared/no_resource', resources: 'Activities') %>
        </div>
      <% else %>
        <%= render_activities(@activities, layout: '/shared/activity') %>
      <% end %>
    </div>
    <%= render 'shared/paginate', resources: @activities %>
  </div>
  <div class="col-lg-3">
    <% if is_current_user?(@user) %>
      <div id="links" class="well">
          <h5>
            <%= fa_icon 'search' %>
            <%= link_to 'Edit Profile', edit_user_path(@user) %>
            </h5>
          <h5>
            <%= fa_icon 'pencil' %>
            <%= link_to 'Change password', edit_user_registration_path %>
          </h5>
          <h5>
             <%= fa_icon 'arrow-circle-right' %>
            <%= link_to 'Following', friends_user_path(@user) %>
            
          </h5>
          <h5>
            <%= fa_icon 'arrow-circle-left' %>
            <%= link_to 'Followers', followers_user_path(@user) %>
             <strong><%= @user.followers.count %></strong>
          </h5>
          <h5>
            <% fa_icon 'trash' %>
            <%= link_to 'Deactivate', deactivate_user_path(@user), class: 'btn btn-danger' %>
          </h5>
       
      </div>
    <% end %>
  </div>
</div>